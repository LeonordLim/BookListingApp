<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/bookSmallThumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <TextView
            android:text= "Title"
            android:textSize="24sp"
            android:fontFamily="serif"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BookTitle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:maxLines="3"
            android:ellipsize="middle"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras tristique, metus vitae suscipit accumsan, elit nunc elementum diam, a commodo nisi neque non justo. "
            android:id="@+id/Description" />
    </LinearLayout>
</LinearLayout>